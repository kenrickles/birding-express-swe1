<%- include('header', {cssFilePath: '/styles.css'}); -%>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 text-center" id="note-header">
      <h1>Note</h1>
    </div>
  </div>
</div>

<div class="container">
    <div class = "row justify-content-center text-center"> <b>Date:</b></div>
    <div class = "row justify-content-center text-center"> <%= note.date %></div>
    <div class = "row justify-content-center text-center"> <b>Flocksize:</b></div>
    <div class = "row justify-content-center text-center"> <%= note.flocksize %></div>
    <div class = "row justify-content-center text-center"> <b>Species Type:</b></div>
    <div class = "row justify-content-center text-center"> <%= species.name %></div>
    <div class = "row justify-content-center text-center"> <b>Behaviour:</b></div>
    <div class="row justify-content-center text-center">
      <% behaviour.forEach((behaviour) =>{ %>
        <%= behaviour.name%>
      <% }); %>
      </div>
    <div class = "row justify-content-center text-center"> </div>
  </div>
  <br>
</div>
<div class = "container justify-content-center text-center">
<h1> Comments </h1>
<% comments.forEach(function(comment) { %>
  <div class="row">
    <div class="col-12">
      <h6><%= `User ${comment.user_id}:` %></h6>
      <p><%= `${comment.description}` %></p>
    </div>
  </div>
  <% }); %>
</div>
</div>
<div class="container justify-content-center text-center">
  <div class="row">
    <div></div>
      <h3> Add a comment</h3>
    </div>
  </div>
  <div class = "container justify-content-center text-center">  
    <form action="/note/<%= note.id %>/comment " method="POST">
    <textarea name="comment" rows="2" class="form-control" placeholder="Add a comment"></textarea> <br>       
    <input type="submit" value="Submit" class="btn btn-success"/>
  </form>
</div>
</div>
<%- include('footer'); -%>