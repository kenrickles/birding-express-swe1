<%- include('header', {cssFilePath: '/styles.css'}); -%>

<div class="container">
  <div class="row">
    <div class="col">
      <h1>Bird Watching Add Observation </h1>
    </div>
  </div>

  <form action="/note" method="POST">
    <div>
      <label for="date">Date:</label><br />
      <input type="date" id="date" name="date" class="form-control" />
    </div>

    <div class="form-group">
      <label for="speciesId">species</label><br />
      <select id="speciesId" name="speciesId" required>
          <option value="" disabled selected hidden>select</option>
      <% species.forEach((element) => { %>
        <option value="<%= element.id %>"><%= element.name %></option>
      <% }); %>
      </select>
    </div>

    <div class="form-group">
      <label>Bird Behaviour</label><br />
      <% behaviours.forEach((behaviour) => { %>
      <label><%= behaviour.name %></label>
      <input type="checkbox" name="behaviourIds" value="<%= behaviour.id %>" />
      <% }); %>
    </div>

    <div class="form-group">
      <label for="flockSize">Flock size:</label><br />
      <input type="text" id="flockSize" name="flockSize" class="form-control" />
    </div>
    <input type="submit" value="Submit" class="btn btn-success" />
  </form>
</div>

<%- include('footer'); -%>