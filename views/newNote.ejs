<%- include('header', {cssFilePath: '/styles.css'}); -%>

<div class="container">
  <div class="row">
    <div class="col">
      <h1>Bird Watching Obeservations </h1>
    </div>
  </div>

  <form action="/note" method="POST">
    <div>
      <label for="date">Date: -(YYYY/MM/DD):</label><br />
      <input type="text" id="date" name="date" class="form-control" />
    </div>

    <div class="form-group">
      <label for="behaviour">Bird Behaviour:</label><br />
      <textarea id="behaviour" name="behaviour" rows="3" class="form-control"></textarea>
    </div>

    <div class="form-group">
      <label for="flockSize">Flock size:</label><br />
      <input type="text" id="flockSize" name="flockSize" class="form-control" />
    </div>
    <input type="submit" value="Submit" class="btn btn-success" />
  </form>
</div>

<%- include('footer'); -%>