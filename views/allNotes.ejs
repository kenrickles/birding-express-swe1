<%- include('header', {cssFilePath: '/styles.css'}) -%>
<div class="container" id="all-notes-container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1 class='text-center'>Bird Notes List</h1>
    </div>
  </div>

  <div class="row justify-content-center text-center">
    <div class="col-3">
      <h4>Date</h4>
    </div>
    <div class="col-2">
      <h4>Species</h4>
    </div>
    <div class="col-2">
      <h4>Flock Size</h4>
    </div>
    <div class="col-2"></div>
  </div>
</div>

<div class="container overflow-auto" >
  <% notes.forEach((element) => { %>
  <div class="row justify-content-center text-center">
    <div class="col-3">
      <p>
        <a href="/note/<%= element.id %> "><%= element.date %></a
        >
      </p>
    </div>
    <div class="col-2">
      <p><%= element.species_name %></p>
    </div>
    <div class="col-2">
      <p><%= element.flocksize %></p>
    </div>
    <div class="col-2">
      <form
        action="note/<%= element.id %>/delete?_method=DELETE"
        method="POST"
      >
        <input
          type="submit"
          value="Delete"
          class="btn btn-danger delete-button"
        />
      </form>
    </div>
  </div>
  <% }); %>
</div>

<!-- footer -->
<%- include('footer'); -%>